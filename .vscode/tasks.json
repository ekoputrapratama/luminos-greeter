{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "command": "ninja -C build -t clean",
      "problemMatcher": []
    },
    {
      "label": "Configure debug",
      "type": "shell",
      "command": "meson configure --buildtype=debug build",
      "problemMatcher": []
    },
    {
      "label": "Configure release",
      "type": "shell",
      "command": "meson configure --buildtype=release build",
      "problemMatcher": []
    },
    {
      "label": "Setup debug",
      "type": "shell",
      "command": "env CC=clang CXX=clang++ meson setup --buildtype=debug build",
      "problemMatcher": []
    },
    {
      "label": "Setup release",
      "type": "shell",
      "command": "meson setup --buildtype=release build",
      "problemMatcher": []
    },
    {
      "label": "Setup debug + Wipe",
      "type": "shell",
      "command": "meson setup build --buildtype=debug --wipe",
      "problemMatcher": []
    },
    {
      "label": "Setup release + Wipe",
      "type": "shell",
      "command": "meson setup build --buildtype=release --wipe",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "ninja -C build",
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Run Test",
      "type": "shell",
      "command": "meson test -C build",
      "problemMatcher": []
    },
    {
      "label": "Run release",
      "type": "shell",
      "command": "./build/greeter/webkitgtk-greeter",
      "problemMatcher": []
    },
    {
      "label": "Run in development mode",
      "type": "shell",
      "command": "G_MESSAGES_DEBUG=all ./build/greeter/webkitgtk-greeter --dev --debug",
      "problemMatcher": []
    },
    {
      "label": "Run with gdb",
      "type": "shell",
      "command": "gdb --args ./build/greeter/webkitgtk-greeter --dev --debug",
      "problemMatcher": []
    }
  ]
}
